(?#
#------------------------------------------------
# Find "BORROWER IS" or "B" followed by a piece 
# of "BORROWER" near the beginning of the line...
#------------------------------------------------
)

(?:

	(?#
	#--------------------------------------------
	# BORROWER IS
	#--------------------------------------------
	)
		
	^[\s\S]{0,12}(?:BORRO|ROWER)[\s\S]{0,9}?\b[I1!|][5$S]
			
	| (?# OR...)
			
	(?#
	#--------------------------------------------
	# Backup: B followed by a piece of BORROWER
	# NRS Example: 0004.tif
	#--------------------------------------------
	)
			
	^[\s\S]{0,2}\(\s?B\s?\)[\s\S]{0,5}(?:BO|RRO|ROW|WER)
			
)

(?#
#------------------------------------------------
# ... not followed by "TRUSTOR", "UNDER", or 
# "SECURITY INSTRUMENT".  This helps avoid false
# positives.
#------------------------------------------------
)
		
(?![\s\S]{0,40}(?:trusto|ustor|Under|Secur|curity|Instr|trument))

(?#
#------------------------------------------------
# Grab the Grantor, which can be up to 200
# characters long
#------------------------------------------------
)

(?<GRANTOR>[\s\S]{5,200}?)

(?#
#------------------------------------------------
# We can tell where the grantor ends by looking
# for the clues "BORROWOR IS", "BORROWOR'S 
# ADDRESS" or "SINGLE FAMILY"
#------------------------------------------------
)

(?:

	(?#
	#------------------------------------------------
	# "BORROWER" followed by... 
	#------------------------------------------------
	)
			
	(?:BORRO|ROWER)
			
	(?: 
		(?#
		#------------------------------------------------
		# ADDRESS
		# NRS Example: 0001.tif
		#------------------------------------------------
		)
		
		[\s\S]{0,12}?(?:ADDR|DRESS)
					
		| (?# OR...)
		
		(?#
		#------------------------------------------------
		# IS
		# NRS Example: 0002.tif
		#------------------------------------------------
		)
		
		[\s\S]{0,9}?[I1!|]\s?[5$S]

	)
				
	|(?# OR... )

	(?#
	#------------------------------------------------
	# SINGLE FAMILY
	# NRS Example: 0003.tif
	#------------------------------------------------
	)

	(?:SING|NGLE)[\s\S]{0,13}(?:FAMI|MILY)

)