(?x)

(?<=

	(?#
	#--------------------------------------------
	# A driver's license clue...
	#--------------------------------------------
	)

	(?:

		(?#
		#-------------------------------------------
		# Various forms of "Driver's License Number"
		# or "Driver's License:"
		#-------------------------------------------
		)

		(?:(?:DRIV|IVER)[\s\S]{0,12}(?:LIC|CENSE)(?:[\s\S]{0,6}NUM(?:BERS?)?|[\s\S]{0,6}?(?:\bN[O0]\b|[#:;])))|
	
		(?#
		#-------------------------------------------
		# "DLN" and "DL:"
		#-------------------------------------------
		)

		(?:\bD\s?[.,]?\s?L\s?[,.]?\s?(?:NUM(?:BERS?)?|\bN[O0]\b|[N#;:]))

	)

	(?#
	#--------------------------------------------
	# ... followed shortly by ...
	#--------------------------------------------
	)

	[\s\S]{0,7}? 
		
)

(?#
#--------------------------------------------
# ... something that looks like a driver's
# license number.  
# This search is CASE SENSITIVE!
#--------------------------------------------
)
	

(?-i) (?#Toggle case sensitivity)

(?#	
#----------------------------------------
# The number may start with 1 to 3 upper
# case letters.
#----------------------------------------
)

(?:\b[A-Z]{1,3}\s?)?
		
(?#
#----------------------------------------
# A sequence of digits, spaces, and dashs
#----------------------------------------
)

\d[\d\x20-]{4,25}\d\b