(?imnsx) (?# Case insensitive, multiline, explicit capture, singleline, ignore pattern whitespace)

(

	(?#
	#--------------------------------------------
	# A driver's license clue...
	#--------------------------------------------
	)
	
	(?:

		(?#
		#-------------------------------------------
		# Various forms of "Driver's License"
		#-------------------------------------------
		)
		
		(?:(?:DRIV|IVER)[\s\S]{0,12}(?:LIC|CENSE))|
	
		(?#
		#-------------------------------------------
		# "DLN", "DL:", and "DL State/No"
		#-------------------------------------------
		)
		
		(?:\bD\s?[.,]?\s?L\s?[.,]?\s?(?:[\s\S]{0,3}STATE[\s\S]{0,3})?(?:NUM(?:BERS?)?|\bN[O0]|[N#;:]))
		
	)
	
	(?#
	#--------------------------------------------
	# ... followed shortly by ...
	#--------------------------------------------
	)
	
	[\s\S]{0,20}?

	(?#
	#--------------------------------------------
	# ... something that looks like a driver's
	# license number.  
	# This search is CASE SENSITIVE!
	#--------------------------------------------
	)
	
	(?-i) (?# Turn on case sensitivity)
	
	(?<DriversLicense_Data>
	
		(?#
		#----------------------------------------
		# The number may start with 1 to 3 upper
		# case letters.
		#----------------------------------------
		)
		
		(?:\b[A-Z]{1,3}\s?)?
		
		(?#
		#----------------------------------------
		# A sequence of digits, spaces, and dashs
		#----------------------------------------
		)
		
		\d[\d\x20-]{4,25}\d\b
	)

)