<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net48</TargetFramework>
	  <OutputPath>..\..\..\Binaries\$(Configuration)\</OutputPath>
	  <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	  <SignAssembly>True</SignAssembly>
	  <AssemblyOriginatorKeyFile>..\..\Core\Code\ExtractInternalKey.snk</AssemblyOriginatorKeyFile>
	  <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
	  <Copyright>Extract Systems (c) 2022</Copyright>
	  <Description>Provides ExtractException class</Description>
  </PropertyGroup>

  <Target Name="CopyFiles" BeforeTargets="Build">
    <Copy SourceFiles="ConfigFiles/ExceptionLogging.config" DestinationFolder="C:/ProgramData/Extract Systems/Configuration/" SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup>
    <EmbeddedResource Include="HandleBarTemplates\DebugSectionTemplate.html" />
    <EmbeddedResource Include="HandleBarTemplates\ErrorSectionTemplate.html" />
    <EmbeddedResource Include="HandleBarTemplates\SourceTemplate.html" />
    <EmbeddedResource Include="HandleBarTemplates\StackTraceSectionTemplate.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Handlebars.Net" Version="2.1.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="NLog" Version="5.0.5" />
    <PackageReference Include="NLog.Targets.Splunk" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Interfaces\Core\Code\Extract.Interfaces.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Configuration" />
    <Reference Include="System.DirectoryServices" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

</Project>
